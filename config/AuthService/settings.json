{
  "service": {
    "shortName": "AuthService",
    "fullName": "Authorisation Service",
    "components": [
      {
        "type": "system",
        "parameters": [
          {
            "name": "isDebugMode",
            "type": "boolean",
            "value": true
          },
          {
            "name": "databaseType",
            "type": "string",
            "value": "mysql"
          },
          {
            "name": "isDatabaseInitialisationUsed",
            "type": "boolean",
            "value": true
          },
          {
            "name": "siteName",
            "type": "string",
            "value": "Test Site"
          },
          {
            "name": "siteDomain",
            "type": "string",
            "value": "example.org"
          },
          {
            "name": "userNameMaxLenInBytes",
            "type": "integer",
            "value": 255
          },
          {
            "name": "userPasswordMaxLenInBytes",
            "type": "integer",
            "value": 255
          },
          {
            "name": "verificationCodeLength",
            "type": "integer",
            "value": 16
          },
          {
            "name": "registrationRequestTtl",
            "type": "integer",
            "value": 300
          },
          {
            "name": "logInRequestTtl",
            "type": "integer",
            "value": 300
          },
          {
            "name": "logOutRequestTtl",
            "type": "integer",
            "value": 60
          },
          {
            "name": "emailChangeRequestTtl",
            "type": "integer",
            "value": 300
          },
          {
            "name": "passwordChangeRequestTtl",
            "type": "integer",
            "value": 300
          },
          {
            "name": "isAdminApprovalRequired",
            "type": "boolean",
